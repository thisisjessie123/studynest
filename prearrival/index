import { useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { motion } from "framer-motion";

const items = [
  { id: 1, name: "è­·ç…§" },
  { id: 2, name: "CAS å‰¯æœ¬" },
  { id: 3, name: "eVisa åˆ—å°ä»¶" },
  { id: 4, name: "è½‰æ¥æ’é ­" },
  { id: 5, name: "é«˜åƒ¹é¦–é£¾" },
  { id: 6, name: "å®¶é„‰å°ç¦®ç‰©" },
];

const correctItems = [1, 2, 3, 4, 6];

export default function PreArrivalDragDrop() {
  const [selected, setSelected] = useState<number[]>([]);
  const [submitted, setSubmitted] = useState(false);

  const toggleItem = (id: number) => {
    if (submitted) return;
    setSelected(prev => prev.includes(id) ? prev.filter(i => i !== id) : [...prev, id]);
  };

  const handleSubmit = () => {
    setSubmitted(true);
  };

  return (
    <div className="p-6 max-w-3xl mx-auto">
      <h1 className="text-3xl font-bold text-orange-700 mb-4">ğŸ’ æ”¶è¡Œæäº’å‹•éŠæˆ²</h1>
      <p className="mb-4 text-lg">è«‹å¾ä»¥ä¸‹é …ç›®ä¸­é¸æ“‡ <strong className="text-orange-600">5 é …å»ºè­°æ”œå¸¶çš„ç‰©å“</strong>ï¼Œé»æ“Šé …ç›®å³å¯æ”¾å…¥è¡Œæç®±ï¼</p>

      <div className="grid grid-cols-2 gap-4 mb-6">
        {items.map(item => (
          <motion.div
            key={item.id}
            className={`cursor-pointer p-4 rounded-xl shadow-md text-center border transition-all ${
              selected.includes(item.id)
                ? "bg-orange-100 border-orange-400"
                : "bg-white hover:bg-orange-50"
            }`}
            whileTap={{ scale: 0.95 }}
            onClick={() => toggleItem(item.id)}
          >
            {item.name}
          </motion.div>
        ))}
      </div>

      <Button onClick={handleSubmit} className="bg-orange-600 hover:bg-orange-700 text-white">
        ç¢ºèªæ”¾é€²è¡Œæç®±
      </Button>

      {submitted && (
        <Card className="mt-6">
          <CardContent className="p-4">
            {correctItems.every(id => selected.includes(id)) && selected.length === 5 ? (
              <p className="text-green-700 font-semibold text-lg">âœ… å®Œç¾ï¼ä½ é¸å°äº†æ‰€æœ‰å»ºè­°æ”œå¸¶çš„ç‰©å“ï¼</p>
            ) : (
              <>
                <p className="text-red-700 font-semibold text-lg">âš ï¸ æœ‰äº›é¸æ“‡ä¸å¤ªå»ºè­°æ”œå¸¶ï¼š</p>
                <ul className="list-disc list-inside mt-2">
                  {selected.map(id => (
                    <li key={id} className={correctItems.includes(id) ? "text-green-700" : "text-red-600"}>
                      {items.find(i => i.id === id)?.name}
                      {!correctItems.includes(id) && " âŒ"}
                    </li>
                  ))}
                </ul>
              </>
            )}
          </CardContent>
        </Card>
      )}
    </div>
  );
}

