    <script>
        let currentSection = 'documents';
        let checkedItems = new Set();
        let totalCheckboxes = 0;
        let currentLanguage = 'zh-TW';

        function switchLanguage(lang) {
            currentLanguage = lang;
            
            // 隱藏所有語言內容
            document.querySelectorAll('.zh-TW, .zh-CN').forEach(el => {
                el.style.display = 'none';
            });
            
            // 顯示選中語言的內容
            document.querySelectorAll(`.${lang}`).forEach(el => {
                el.style.display = lang === 'zh-TW' ? 'inline' : 'inline';
            });
            
            // 更新按鈕狀態
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.getElementById(`btn-${lang}`).classList.add('active');
        }

        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remove active class from all nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(sectionId).classList.add('active');
            
            // Add active class to clicked nav item
            event.target.classList.add('active');
            
            currentSection = sectionId;
            updateProgress();
        }

        function toggleCheck(item) {
            const checkbox = item.querySelector('.checkbox');
            const isChecked = checkbox.classList.contains('checked');
            
            if (isChecked) {
                checkbox.classList.remove('checked');
                checkbox.innerHTML = '';
                checkedItems.delete(item);
            } else {
                checkbox.classList.add('checked');
                checkbox.innerHTML = '✓';
                checkedItems.add(item);
            }
            
            updateProgress();
        }

        function updateProgress() {
            if (totalCheckboxes === 0) {
                totalCheckboxes = document.querySelectorAll('.checklist li').length;
            }
            
            const completion = (checkedItems.size / totalCheckboxes) * 100;
            document.getElementById('progressFill').style.width = completion + '%';
            document.getElementById('completionPercent').textContent = Math.round(completion) + '%';
            
            const badge = document.getElementById('completionBadge');
            if (completion > 0) {
                badge.classList.add('show');
            } else {
                badge.classList.remove('show');
            }
            
            // Celebrate when reaching 100%
            if (completion === 100) {
                setTimeout(() => {
                    if (currentLanguage === 'zh-TW') {
                        alert('🎉 恭喜！你已經完成所有準備工作，準備好前往英國了！');
                    } else {
                        alert('🎉 恭喜！你已经完成所有准备工作，准备好前往英国了！');
                    }
                }, 500);
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();
            
            // Add some interactive animations
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.animation = 'slideInUp 0.5s ease-out';
                }, index * 100);
            });
        });

        // Add some floating animations
        document.addEventListener('mousemove', function(e) {
            const cards = document.querySelectorAll('.card');
            const mouseX = e.clientX / window.innerWidth;
            const mouseY = e.clientY / window.innerHeight;
            
            cards.forEach((card, index) => {
                const speed = (index + 1) * 0.5;
                const x = (mouseX - 0.5) * speed;
                const y = (mouseY - 0.5) * speed;
                card.style.transform = `translateX(${x}px) translateY(${y}px)`;
            });
        });
    </script>
</body>
</html>
